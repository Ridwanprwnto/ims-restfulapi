{
    "name": "ims-api",
    "module": "src/app.js",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun --watch src/app.js",
        "dev:hot": "bun --hot src/app.js",
        "start": "bun src/app.js",
        "env:dev": "cp .env.development .env && cp .env.development .env.local",
        "env:test": "cp .env.test .env && cp .env.test .env.local",
        "env:prod": "cp .env.production .env && cp .env.production .env.local"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@hono/node-server": "latest",
        "bcryptjs": "^3.0.2",
        "date-fns": "^4.1.0",
        "dotenv": "latest",
        "hono": "latest",
        "jsonwebtoken": "^9.0.2",
        "mariadb": "latest",
        "samba-client": "^7.2.0",
        "winston": "latest"
    }
}
